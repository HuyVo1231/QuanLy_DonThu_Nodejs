<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý hồ sơ tiếp dân</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    {{#unless isLoginPage }}
    {{> header}}
    <section id="interface">
        <div class="navigation">
            <div class="n1">
                <div>
                    <i id="menu-btn" class="fas fa-bars"></i>
                </div>
                <div class="search">
                    <i class="fas fa-search search-btn"></i>
                    <input type="date" name="searchDate">
                </div>
            </div>
            <div class="profile">
                <i class="fas fa-bell"></i>
                {{#if avatar}}
                    <img src="{{avatar}}" alt="Avatar">
                {{else}}
                    <img src="https://www.shutterstock.com/image-vector/default-avatar-profile-icon-social-600nw-1677509740.jpg" alt="Default Avatar">
                {{/if}}
            </div>
        </div>
        <h3 class="i-name">
            Dashboard
        </h3>
    {{/unless}}

    {{{ body }}}
    <form action="" id="searchForm"></form>
    <!-- Your existing script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            // Xử lý khi click vào nút menu
            $('#menu-btn').click(function() {
                $('#menu').toggleClass('active');
            });

            $('.search-btn').click(function() {
                var searchDateValue = $('input[name="searchDate"]').val();
                var searchForm = document.forms['searchForm'];
                searchForm.action = '/ngaytiepdan/' + searchDateValue + '/search';
                searchForm.submit();
            });

            // Xử lý khi click vào mỗi mục trong menu
            $('li').click(function() {
                var link = $(this).find('a').attr('href');
                window.location.href = link;
                console.log(window.location.href);
            });
        });

    </script>
</body>
</html>
