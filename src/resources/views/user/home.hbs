<form action="/user/{{infoUser._id}}?_method=PUT" method="POST">
    <div class="row d-flex justify-content-center align-items-center pt-4">
        <div class="col-lg-9 mb-4 mb-lg-0">
            <div class="card mb-3 p-4" style="border-radius: .5rem;">
                <div class="row">
                    <div class="col-md-4 text-center mt-4 mb-3">
                        {{#if infoUser.avatar}}
                            <img src="{{infoUser.avatar}}" alt="Avatar" class="rounded-circle mb-3" style="width: 160px; height: 160px; object-fit: cover;">
                        {{else}}
                            <img src="https://static.vecteezy.com/system/resources/previews/009/292/244/original/default-avatar-icon-of-social-media-user-vector.jpg" alt="Default Avatar" class="rounded-circle mb-3" style="width: 160px; height: 160px; object-fit: cover;">
                        {{/if}}
                        <h5>{{infoUser.name}}</h5> 
                        <p>{{infoUser.title}}</p>
                        <input class="form-control" type="url" id="avatarUrl" name="avatar" value="{{infoUser.avatar}}" placeholder="Enter avatar URL">
                    </div>
                    <div class="col-md-8 mt-1">
                        <div class="card-body p-4">
                            <h6>Account Details</h6>
                            <hr class="mt-0 mb-4">
                            <div class="form-group mb-3" style="font-size: 14px;">
                                <label for="username">Username</label>
                                <input type="text" class="form-control mt-1" id="username" value="{{ infoUser.name }}" placeholder="Enter email" name="username" disabled>
                            </div>
                            <div class="form-group" style="font-size: 14px;">
                                <label for="email">Email address</label>
                                <input type="email" class="form-control mt-1" id="email" value="{{ infoUser.email }}" placeholder="Enter email" name="email">
                            </div>
                            <div class="row mt-3 mb-3">
                                <div class="form-group col-md-6" style="font-size: 14px;">
                                    <label for="role">Role</label>
                                    <input type="text" class="form-control mt-1" id="role" value="{{ infoUser.role }}" placeholder="Enter email" name="role">
                                </div>
                                <div class="form-group col-md-6" style="font-size: 14px;">
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control mt-1" id="title" value="{{ infoUser.title }}" placeholder="Enter email" name="title">
                                </div>
                            </div>
                            <div class="mt-3 mb-3">
                                <select class="form-select" id="status" name="isActive">
                                    {{#if infoUser.isActive}}
                                        <option value="true">Active</option>
                                        <option value="false">Inactive</option>

                                    {{else}}
                                        <option value="false">Inactive</option>
                                        <option value="true">Active</option>
                                    {{/if}}
                                </select>
                            </div>
                            <button class="btn btn-primary">Thay đổi</button>
                        </div>          
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
